<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.vishwaagrotech.digitalhr.ui.profile.SupportDetailFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_light_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:padding="@dimen/section_spacing">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/button_radius"
                    android:backgroundTint="@color/lightWhite"
                    android:padding="@dimen/section_spacing">

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h6"
                        android:layout_alignParentStart="true"
                        android:text="May 13 2023" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h6"
                        android:layout_alignParentEnd="true"
                        android:text="Pending" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_date"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_marginTop="@dimen/section_spacing"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:text="This is a test purpose" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/section_spacing"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radius"
                    android:backgroundTint="@color/lightWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/section_spacing">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#C4FFFFFF"
                        android:textSize="@dimen/text_size_h6"
                        android:text="Description" />

                    <TextView
                        android:id="@+id/text_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/inner_spacing"
                        android:textSize="@dimen/text_size_h6"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#C4FFFFFF"
                        android:layout_marginTop="@dimen/section_spacing"
                        android:textSize="@dimen/text_size_h6"
                        android:text="Assigned to" />

                    <TextView
                        android:id="@+id/text_assigned_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_date"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_marginTop="@dimen/inner_spacing"
                        android:textColor="@color/white"
                        android:text="Adminstrator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#C4FFFFFF"
                        android:layout_marginTop="@dimen/section_spacing"
                        android:textSize="@dimen/text_size_h6"
                        android:text="Solved By" />

                    <TextView
                        android:id="@+id/text_solved_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_date"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_marginTop="@dimen/inner_spacing"
                        android:textColor="@color/white"
                        android:text="-" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#C4FFFFFF"
                        android:layout_marginTop="@dimen/section_spacing"
                        android:textSize="@dimen/text_size_h6"
                        android:text="Solved At" />

                    <TextView
                        android:id="@+id/text_solved_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_date"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_marginTop="@dimen/inner_spacing"
                        android:textColor="@color/white"
                        android:text="-" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</layout>