<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.CNInfotech.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CNInfotech.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/section_spacing">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/inner_spacing"
                android:layout_toEndOf="@id/image_logo"
                android:gravity="center_vertical"
                android:text="Attendance"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h5" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/appwidget_check_in"
                style="@style/Widget.CNInfotech.AppWidget.InnerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_spacing"
                android:layout_weight=".5"
                android:background="@drawable/button_radius"
                android:backgroundTint="@color/colorSecondary"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Check In"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h6" />

            <Button
                android:id="@+id/appwidget_check_out"
                style="@style/Widget.CNInfotech.AppWidget.InnerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inner_spacing"
                android:layout_weight=".5"
                android:background="@drawable/button_radius"
                android:backgroundTint="@color/colorBlue"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Check Out"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h6" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/section_spacing"
            android:textSize="@dimen/text_size_h5"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Other"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inner_spacing"
            android:orientation="horizontal">

            <Button
                android:id="@+id/appwidget_notice"
                style="@style/Widget.CNInfotech.AppWidget.InnerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_spacing"
                android:layout_weight=".5"
                android:background="@drawable/button_radius"
                android:backgroundTint="@color/colorBlue"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Notice"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h6" />

            <Button
                android:id="@+id/appwidget_notification"
                style="@style/Widget.CNInfotech.AppWidget.InnerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inner_spacing"
                android:layout_weight=".5"
                android:background="@drawable/button_radius"
                android:backgroundTint="@color/colorSecondary"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Notifications"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h6" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>